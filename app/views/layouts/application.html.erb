<!DOCTYPE html>
<html>
<head>
  <title>
    <%= site_name %>: <%= yield :title %>
  </title>
  <%#= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'sprite.css' %>
  <!-- <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'myaccount.css' if myaccount_tab %> -->
  <%= stylesheet_link_tag 'bs-2.0.4.css' %>
    <!--[if lt IE 8]
  <%= stylesheet_link_tag 'ie.css', :media => 'screen, projection'%>
  <![endif]-->
  <!--[if lt IE 7]
      <%= stylesheet_link_tag 'ie6.css', :media => 'screen, projection' %>
  <![endif]-->
  <%= csrf_meta_tag %>
  <%= javascript_include_tag 'application' %>
  <%= yield :head %>

</head>

<body >

  <%= render :partial => '/shared/welcome_header'%>

  <div id="sub_header_wrapper" class='subnav subnav-fixed'>
    <ul class="nav nav-pills" id='main-product-type-tabs'>
      <%= render 'shared/main_product_tabs' %>
    </ul>
  </div>
  <div id="sub_header_wrapper" class='subnav subnav-fixed sublvl2'>
    <ul class="nav nav-pills" id='main-product-type-tabs'>
      <%= render '/layouts/product_search' %>
    </ul>
  </div>

  <%= render :partial => '/shared/myaccount_subheader' if myaccount_tab %>

  <div class="container down112">
    <%= raw "<p class='flash_notice'> #{notice}</p>"  if notice %>
    <%= raw "<p class='flash_error'>#{alert}</p>"     if alert %>
    <%= yield %>
  </div>

  <div class="row down112" style="margin-left:0;background:#000;">
    <%= render 'shared/main_footer' %>
  </div>

  <%= yield :bottom %>

  <script>
  jQuery(window).ready(
    function() {
      jQuery('.flash_notice').delay(6000).slideUp( 'slow');
      jQuery('.flash_error').delay(6000).slideUp( 'slow');
    }
  );
  </script>

  <%# javascript_include_tag :defaults %>
  <%#= javascript_include_tag 'jquery-1.4.2.min', 'rails' %>
  <%#= javascript_include_tag :all, :cache => true %>
  <%= javascript_include_tag 'bootstrap-carousel.js' %>
  <%= javascript_include_tag 'bootstrap-transition.js' %>
  <%= javascript_include_tag 'prefix-free.min.js' %>  
  <script type="text/javascript">
    $('.carousel').carousel({
      interval: 3000
    })
  </script>
</body>
  <%= yield :below_body %>
</html>
